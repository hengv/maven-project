pipeline {
  agent any
  stages {
    stage('Init'){
      steps {
        echo "Testing..."
      }
    }
    stage('Build'){
      steps {
        echo "Building..."
        sh 'mvn clean package'
      } 
      post {
        echo 'Now Archiving...'
        archiveArtifacts artifacts: '**/target/*.war'
      }
    }
    stage('Deploy'){
      steps {
        echo "Code deployd..."
      }
    }
  }
}
