pipeline {
    agent any

    parameters {
         string(name: 'tomcat_dev', defaultValue: 'jenkins.weiheng.ink', description: 'Staging Server')
         string(name: 'tomcat_prod', defaultValue: 'tomcat.weiheng.ink', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }

stages{
        stage('Build'){
            steps {
                sh 'id'
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "id"
                        sh "cat /etc/hostname"
                        sh "ls -l /var/lib/jenkins/"
                        sh 'ssh -i /var/lib/jenkins/private.key hengwei@jenkins.weiheng.ink  "id"'
                        sh "scp -i /var/lib/jenkins/private.key **/target/*.war hengwei@jenkins.weiheng.ink:/opt/tomcat/latest/webapps/"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        sh "id"
                        sh "cat /etc/hostname"
                        sh "ls -l /var/lib/jenkins/"
                        sh 'ssh -i /var/lib/jenkins/private.key hengwei@tomcat.weiheng.ink  "id"'
                        sh "scp -i /var/lib/jenkins/private.key **/target/*.war hengwei@tomcat.weiheng.ink:/opt/tomcat/latest/webapps"
                    }
                }
            }
        }
    }
}
